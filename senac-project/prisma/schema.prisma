// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model user{
 id  Int @id    @default(autoincrement())
 name  String?  @default("") 
 email String   @unique
 username String  @unique
 password String

  created_at DateTime @default(now())
  update_at DateTime @updatedAt
}

model movie {
  id Int @id @default(autoincrement())
  name String @unique
  releaseDate String
  imageURL String
  created_at DateTime @default(now())
  update_at DateTime @updatedAt
}

